<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_new">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:id="@+id/layout_main"
        android:visibility="visible"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:padding="8dp"
            android:weightSum="1">

            <TextView
                android:id="@+id/textview_symptom_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Headache"
                android:textColor="@color/green_blue"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textview_recorded_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="encountered at 04:30 PM"
                android:layout_marginBottom="10dp"
                android:visibility="visible"
                android:textColor="@color/text_hint_color"
                android:textSize="14sp" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/layout_round_corners"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="5">

            <LinearLayout
                android:id="@+id/layout_none"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/layout_none_unselected_background"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textview_none"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/none"
                    android:textColor="@color/black"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_mild"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/unselected_mild"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/textview_mild"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/mild"
                    android:textColor="@color/black"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_moderate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/unselected_moderate"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/textview_moderate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/moderate"
                    android:textColor="@color/black"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_difficult"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/unselected_difficult"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/textview_difficult"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/difficult"
                    android:textColor="@color/black"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_severe"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/layout_severe_unselected"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/textview_severe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/severe"
                    android:textColor="@color/black"
                    android:visibility="gone" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/layout_main"
        android:background="@color/light_grey" />

</RelativeLayout>